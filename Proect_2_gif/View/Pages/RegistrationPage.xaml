<Page x:Class="Proect_2_gif.View.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:gif="http://wpfanimatedgif.codeplex.com"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Proect_2_gif.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" 
      d:DesignWidth="850"
      FontFamily="Ink Free">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image Source="/Images/main_bg.jpg"
               Grid.Column="0"
               Margin="0 0 0 90"/>
        <TextBlock Text="Защита  КУР  СОВОЙ"
                   FontWeight="SemiBold"
                   FontSize="33"
                   Foreground="#f3701e"
                   TextAlignment="Center"
                   Grid.Column="0"
                   Margin="0,492,0,61"/>

        <TextBlock Text="Практическая работа №3. Разработка овторизации Без использования Тимофея "
                   HorizontalAlignment="Center"
                   TextWrapping="Wrap"
                   Foreground="#f3701e"
                   FontWeight="SemiBold"
                   FontSize="25"
                   Grid.Column="1"
                   Margin="5"/>
        <Border Background="#4b607f"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Height="200"
                Width="300"
                Grid.Column="1"
                CornerRadius="25"
                Effect="{StaticResource MaterialDesignElevationShadow16}">
            <Grid>
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="PeopleAdd"
                                                 Margin="0 15 0 0"
                                                 Foreground="#e8d8c8"/>
                        <TextBox Width="199"
                                 x:Name="TbLogin"
                                 Foreground="#e8d8c8"
                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                 materialDesign:HintAssist.Hint="Введите логин"
                                 materialDesign:HintAssist.Foreground="#e8d8c8"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 materialDesign:TextFieldAssist.UnderlineBrush="#e8d8c8"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                Margin="0 5 0 0">
                        <materialDesign:PackIcon Kind="Shield"
                                                 Margin="0 15 3 0"
                                                 Foreground="#e8d8c8"/>
                        <PasswordBox Width="199"
                                     x:Name="PbPassword"
                                     Foreground="#e8d8c8"
                                     materialDesign:TextFieldAssist.HasClearButton="True"
                                     materialDesign:HintAssist.Hint="Введите Паротль"
                                     Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                                     materialDesign:HintAssist.Foreground="#e8d8c8"
                                     materialDesign:TextFieldAssist.UnderlineBrush="#e8d8c8"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                Margin=" 0 5 0 0 ">
                        <materialDesign:PackIcon Kind="ChairSchool"
                                                 Margin="0 5 3 0"
                                                 Foreground="#e8d8c8"/>
                        <ComboBox Width="199"
                                  x:Name="CbRole"
                                  DisplayMemberPath="RoleID"
                                  Background="#4b607f"
                                  Foreground="#e8d8c8"
                                  Style="{DynamicResource MaterialDesignComboBox}"
                                  materialDesign:TextFieldAssist.UnderlineBrush="#e8d8c8"
                                  materialDesign:HintAssist.Hint="Выберите роль"
                                  FontSize="12"/>

                    </StackPanel>

                    <Button Margin="0 20 0 0"
                            Background="Transparent"
                            Foreground="#e8d8c8"
                            BorderBrush="#e8d8c8"
                            x:Name="BtnRegistration"
                            Click="BtnRegistration_Click"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            materialDesign:ButtonProgressAssist.IndicatorForeground="#e8d8c8"
                            materialDesign:ButtonProgressAssist.IndicatorBackground="Transparent"
                            materialDesign:ButtonProgressAssist.Value="-1"
                            materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                            materialDesign:ButtonProgressAssist.IsIndeterminate="True">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Check"
                                                     Margin="0 2 3 0"/>
                            <TextBlock Text=" Зарегистрироваться"/>
                        </StackPanel>

                    </Button>

                </StackPanel>
            </Grid>
        </Border>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0 0 0 100"
                    Grid.Column="1">
            <TextBlock Text="ИЛИ"
                       FontSize="15"
                       Foreground="#e8d8c8"
                       TextAlignment="Center"/>
            <Button Background="Transparent"
                    Foreground="#e8d8c8"
                    x:Name="BtnLogin"
                    Click="BtnLogin_Click">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Login"
                                             Margin="0 2 3 0 "/>
                    <TextBlock Text="Войти в систему"
                               TextDecorations="Underline"/>
                </StackPanel>
            </Button>
        </StackPanel>



        <Image gif:ImageBehavior.RepeatBehavior="Forever"
               gif:ImageBehavior.AnimatedSource="/Images/Main_cat.gif"
               Margin="178,520,178,44" 
               Grid.Column="1"/>

    </Grid>
</Page>
